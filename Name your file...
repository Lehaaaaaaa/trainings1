trainings = {
    "Онбордінг":{
        "відповідальний": "Григоров О. С.",
        "теми": ["техніка безпеки", "робота в команді"],
        "дата": "15.05"

    },
    "Підвищення кваліфікації":{
        "відповідальний": "Череватий К. І.",
        "теми": ["лідерство","комп. грамотність"],
        "дата": "20.11"

    }
}
print('Тренінги ProTeam')
print("1-назви тренінгів, 2-інфо про тренінг")
a = input("Номер дії (off - вийти):")
while a != 'off':
    if a == '1':
        for training in trainings:
            print('-', training)
    if a == '2':
        b = input("Назва тренінгу:")
        if b in trainings:
            print(trainings[b]["відповідальний"])
            print(trainings[b]["теми"])
            print(trainings[b]["дата"])
            
        else:
            print("Такого тренінгу не існує!")

    a = input("Номер дії (off - вийти)")
